<div class="flex flex-col items-center div w-[55%] gap-[20px] py-[20px] rounded-xl op-white">
    <h1 class="text-3xl font-black">Club Posts</h1>
    <% @posts.each do |post| %>
    <div class="w-[70%] bg-black rounded-xl">
      <% if user_signed_in? %>
        <p class="text-lime-400 font-bold p-1"><%= post.user.username%></p>
      <% else %>
        <p class="p-1 text-lime-300 font-bold">An anonymous user wrote:</p>
      <% end %>
      <div class="p-1">
        <p class="text-lime-500"><%= post.body %></p>
        <p class="text-lime-500 text-right text-xs"><%= post.created_at %></p>
      </div>
    </div>
    <% end %>
</div>